{
  "name": "ProductsSimilarityTable",
  "properties": {
    "structure": [
      {
        "name": "Product1Id",
        "type": "String"
      },
      {
        "name": "Product2Id",
        "type": "String"
      },
      {
        "name": "Similarity",
        "type": "String"
      }
    ],
    "type": "AzureBlob",
    "linkedServiceName": "StorageLinkedService",
    "typeProperties": {
      "folderPath": "productrec/itemsimilarity/yearno={Year}/monthno={Month}/",
      "partitionedBy": [
        {
          "name": "Year",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "yyyy"
          }
        },
        {
          "name": "Month",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "%M"
          }
        }
      ],
      "format": {
        "type": "TextFormat",
        "columnDelimiter": "\t"
      }
    },
    "availability": {
      "frequency": "month",
      "interval": 1
    }
  }
}
