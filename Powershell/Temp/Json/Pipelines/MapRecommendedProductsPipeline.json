{
  "name": "MapRecommendedProductsPipeline",
  "properties": {
    "description": "This is a pipeline to map the recommended products generated as part of Mahout recommendations to the product name",
    "start": "2015-05-01T00:00:00Z",
    "end": "2016-05-01T00:00:00Z",
    "activities": [
      {
        "name": "MapRecommendedProductsHiveActivity",
        "inputs": [
          {
            "name": "ProductsRecommendationTable"
          }
        ],
        "outputs": [
          {
            "name": "ProductsRecommendationOutputTable"
          }
        ],
        "linkedServiceName": "HDInsightLinkedService",
        "type": "HDInsightHive",
        "typeProperties": {
          "scriptpath": "scripts\\recommendedproducts.hql",
          "scriptLinkedService": "StorageLinkedService",
          "defines": {
            "MAHOUTOUTPUT": "$$Text.Format('wasb://productrec@jjctestdeployment1992.blob.core.windows.net/recommendations/yearno={0:yyyy}/monthno={0:%M}/', SliceStart)",
            "RECOMMENDATIONSOUTPUT": "$$Text.Format('wasb://productrec@jjctestdeployment1992.blob.core.windows.net/recommendationsoutput/yearno={0:yyyy}/monthno={0:%M}/', SliceStart)"
          }
        },
        "policy": {
          "concurrency": 1,
          "executionPriorityOrder": "NewestFirst",
          "retry": 0,
          "timeout": "01:00:00"
        }
      }
    ]
  }
}
